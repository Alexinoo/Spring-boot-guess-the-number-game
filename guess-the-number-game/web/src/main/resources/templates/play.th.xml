<thlogic>
    <attr   sel="#head-id"
            th:insert="~{fragments/head::headFragment}" />

    <attr sel="#game-title"
            th:text="#{game.title}"/>

    <attr sel="#main-message"
             th:text="${mainMessage}" />

    <attr sel="#result-message"
          th:text="${resultMessage}"/>

    <attr sel="#enter-guess"
          th:text="#{game.enter.guess}" />

    <attr sel="#submit"
          th:value="#{game.submit}" />

    <attr sel="#footer-id"
          th:insert="~{fragments/footer :: footerFragment}"/>
</thlogic>